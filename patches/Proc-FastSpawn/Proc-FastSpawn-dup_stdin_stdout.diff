+{
+  AV *av;
+  int n;
+  int fd;
+
+  if (!SvROK (sv) || SvTYPE (SvRV (sv)) != SVt_PVAV)
+    croak ("expected a reference to an array of descriptors strings");
+
+  av = (AV *)SvRV (sv);
+  n = av_len (av) + 1;
+
+  if ( n == 0 )
+	return -1;
+
+  if ( n == 1 && i > 0 )
+	return -1;
+
+  if ( n > 1 )
+  	return (int)SvIV(*av_fetch (av, i, 1));
+}
